/* pages/category/index.wxss */

.content {
  position: fixed;
  top: 100rpx;
  bottom: 0;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
}

.content-left {
  width: 200rpx;
  background-color: #f5f5f5;
  height: 100%;
  overflow: auto;
}

.list-left {
  padding: 30rpx 0;
  border-bottom: 1px solid #efefef;
  overflow: auto;
  text-align: center;
  font-size: 14px;
  position: relative;
}

.list-left:last-child {
  border-bottom: 0;
}

.active {
  color: red;
  background-color: #fff;
  border: 0;
}

.active::before {
  content: '';
  display: block;
  width: 6rpx;
  height: 60rpx;
  position: absolute;
  top: 18rpx;
  left: 10rpx;
  background-color: red;
}

.content-right {
  flex: 1;
  overflow: auto;
}

.category-title {
  text-align: center;
  padding: 20rpx;
  color: #ccc;
}

.category-title text {
  color: #000;
  margin: 0 20rpx;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.product-list navigator {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  overflow: hidden;
  font-size: 12px;
  padding: 10rpx;
  box-sizing: border-box;
}

.product-list image {
  width: 100%;
  height: 92rpx;
}
