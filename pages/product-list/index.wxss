/* pages/product-list/index.wxss */

.seatch {
  width: 100%;
  display: flex;
  background-color: #efefef;
}

.seatch-input {
  display: flex;
  justify-content: space-around;
  margin: 35rpx 20rpx;
  background-color: #fff;
  padding: 5rpx 20rpx;
  width: 100%;
  border-radius: 13rpx;
}

.seatch .seatch-input icon {
  margin-left: 15rpx;
}

.seatch-input input {
  height: 100%;
  width: 100%;
}

.tab {
  display: flex;
  padding: 20rpx;
  justify-content: space-around;
  border-bottom: 1px solid #999;
}

.tab-item {
  display: flex;
}

.tab-item icon {
  margin-top: -12rpx;
}

.goods-list {
  display: flex;
  border-bottom: 1px solid #eee;
}

.goods-list  image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  padding-right: 20rpx;
}

.goods-item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price {
  color: red;
  font-size: 22px;
}
.price text{
  font-size: 14px;
}
