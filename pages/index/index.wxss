/**index.wxss**/

.search {
  background-color: #ff2d4a;
  padding: 20rpx;
}

.search-input {
  display: flex;
  background-color: #fff;
  height: 60rpx;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 14px;
  border-radius: 10px;
}

.search-input icon {
  margin-right: 5px;
}

.swiper {
  height: 340rpx;
}

.swiper image {
  width: 750rpx;
  height: 340rpx;
}

.menus {
  display: flex;
  justify-content: space-around;
  align-content: center;
  padding: 20rpx 0;
}

.menus image {
  height: 140rpx;
  width: 128rpx;
}
